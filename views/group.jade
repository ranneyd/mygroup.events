extends layout

block navbar
    include navbar
block content
    div.row
        div.col.s12.m10.offset-m1.l8.offset-l2
            div.card.hoverable
                div.card-image
                    img.activator(src="images/beachbanner.png")
                div.card-content
                    span.card-title.activator Beach<i class="material-icons right">more_vert</i>
                    p Let's go to the beach
                div.card-reveal
                    span.card-title Beach<i class="material-icons right">close</i>
                    p More information
                div.card-action
                    a RSVP
    div.modal.modal-fixed-footer#add-event
        div.modal-content
            h4
                | Add a new event 
                i.material-icons.right.modal-close close
            div.row
                div.col.s12
                    ul.tabs
                        li.tab.col.s12
                            a.active(href="#test1") Test 1
                        //- li.tab.col.s3
                        //-     a(href="#test2") Test 2
                        //- li.tab.col.s3
                        //-     a(href="#test3") Test 3
                        //- li.tab.col.s3
                        //-     a(href="#test4") Test 4
                div.col.s12#test1
                    div.row
                        form.col.s12
                            div.row
                                div.input-field.col.s12
                                    input.validate#name(type="text" required)
                                    label(for="name") Name of your event
                            div.row
                                div.input-field.col.s6
                                    input.datepicker#date(type="date")
                                    label(for="date") What date is your event?
                                div.input-field.col.s6
                                    input.validate#time(type="text" required pattern="(1[012]|[1-9]):[0-5][0-9] *(a|A|p|P)(m|M)")
                                    label(for="time" data-error="Please enter a valid date") What time is your event?
                            div.row
                                div.input-field.col.s12
                                    textarea.materialize-textarea#description(type="text")
                                    label(for="description") Description of your event
                //- div.col.s12#test2
                //-     p Test 2
                //- div.col.s12#test3
                //-     p Test 3
                //- div.col.s12#test4
                //-     p Test 4
        div.modal-footer
            - var modalButtonClasses = "modal-action btn-flat waves-effect waves-dark"
            a(class=modalButtonClasses) Submit
            a.modal-close.left(class=modalButtonClasses) Close
